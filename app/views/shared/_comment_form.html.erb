<%= form_for([@property, @comment]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_area :comment, placeholder: "Add your comment...",
                              class:       "form-control" %>
  </div>
  <%= f.submit "Post",
               class: "btn btn-block btn-outline-success rounded-pill" %>
<% end %>