<% provide(:title, "Property details") %>
<div class="row">
  <div class="col-md-8 col-lg-6 offset-md-2 offset-lg-3">
    <h2 class="text-center mb-3">Properties details</h2>
    <%= render 'shared/property_details' %>
  </div>
</div>
<% if @property.approved? %>
  <div class="row comments">
    <div class="col-md-8 col-lg-6 offset-md-2 offset-lg-3">
      <h3 class="text-center mb-3">
        Comments (<%= @property.comments.count %>)
      </h3>
      <%= render 'shared/new_comment' %>
      <% if @comments.any? %>
        <%= render @comments %>
        <%= will_paginate(
              @comments,
              renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
      <% end %>
    </div>
  </div>
<% end %>