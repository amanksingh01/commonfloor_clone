<div class="<%= @properties_grid_col.nil? ? "col-md-6 col-lg-4" :
                                            @properties_grid_col %>">
  <div class="card border-success mb-3" id="property-<%= property.id %>">
    <% if property.sold? %>
      <div class="position-absolute w-100">
        <h2 class="sold-tag text-center text-uppercase text-light bg-secondary">
          Sold
        </h2>
      </div>
    <% end %>
    <%= image_tag(property.picture.url, class: "card-img-top",
                                        alt:   "Property image") %>
    <div class="card-body">
      <h5 class="card-title">
        <%= property_title(property) %>
      </h5>
      <p class="card-text">&#x20b9 <%= property.price %></p>
      <p class="card-text">
        <small class="text-muted">
          Posted <%= time_ago_in_words(property.created_at) %> ago.
        </small>
      </p>
      <%= link_to "View details", property,
                  class: "btn btn-outline-success rounded-pill" %>
    </div>
  </div>
</div>