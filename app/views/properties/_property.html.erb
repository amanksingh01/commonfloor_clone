<div class="<%= @properties_grid_col %>">
  <div class="card border-success mb-3" id="property-<%= property.id %>">
    <%= image_tag(property.picture.url, class: "card-img-top",
                                        alt:   "Property image") %>
    <div class="card-body">
      <h5 class="card-title">
        <%= property.bed_rooms == 'na' ? (property.area.to_s + " sq. ft.") :
                                          property.bed_rooms.upcase %>
        <%= property.property_type.capitalize %> for
        <%= property.property_status %> in <%= property.locality.titleize %>,
        <%= property.city.titleize %>
      </h5>
      <p class="card-text">&#x20b9 <%= property.price %></p>
      <p class="card-text">
        <small class="text-muted">
          Posted <%= time_ago_in_words(property.created_at) %> ago.
        </small>
      </p>
      <%= link_to "View details", property, class: "btn btn-success" %>
    </div>
  </div>
</div>